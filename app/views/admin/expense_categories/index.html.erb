<div class="category-index-wrapper">
  <div class="row">
    <div class="col-md-offset-4 col-md-4 container">
      <h1 class="text-center">経費カテゴリ一覧</h1><br>
        <table class="table table-striped table-bordered">
          <thead>
            <tr class="table-info">
              <th>No.</th>
              <th>経費名称</th>
              <th></th>
            </tr>
          </thead>
          <% @expense_categories.each do |expense_category| %>
            <tbody>
              <tr>
                <th scope="row"><%= expense_category.id %></th>
                  <td><%= expense_category.name %></td>
                  <td>
                    <%= button_to "編集", edit_admin_expense_category_path(expense_category), method: :get %>
                    <%= button_to "削除", admin_expense_category_path(expense_category), method: :delete, data:
                      { confirm: "削除してよろしいですか？",
                        commit: "削除",
                        cancel: "キャンセル" }, title: "削除の確認" %>
                  </td>
              </tr>
            </tbody>
          <% end %>
        </table>
        <%= button_to "経費カテゴリ登録", new_admin_expense_category_path, method: :get %>
      <%= paginate @expense_categories %>
    </div>
  </div>
</div>