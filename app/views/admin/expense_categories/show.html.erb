<div class="category-show-wrapper">
  <div class="row">
    <div class="col-md-offset-4 col-md-4 container">
      <h1 class="text-center">経費カテゴリ詳細</h1><br>
        <table class="table table-striped table-bordered">
          
            <tr>
              <th>No.</th>
              <td><%= @expense_category.id %></td>
            </tr>
              
            <tr>
              <th>経費名称</th>
              <td><%= @expense_category.name %></td>
            </tr>
              
            <tr>
              <td>
              </td>
              <td>
                <%= link_to "編集", edit_admin_expense_category_path(@expense_category) %>
                <%= link_to "削除", admin_expense_category_path, method: :delete, data:
                  { confirm: "削除してよろしいですか？",
                    commit: "削除",
                    cancel: "キャンセル" }, title: "削除の確認" %>
              </td>
            </tr>
          
        </table>
    </div>
  </div>
</div>