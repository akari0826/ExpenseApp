<div class="expense-edit-wrapper">
  <div class="container">
    <div class="row">
      <div class="col-md-offset-4 col-md-4">
        <%= form_with model: @expense, url: admin_expense_path, local: true do |f| %>
        
          <!--バリデーションエラーメッセージの表示-->
          <%= render 'layouts/error_messages', model: f.object %>
          <h1 class="text-center">経費編集</h1><br>
          
          <div class="form-group">
            <%= f.label :申請日 %>
            <%= f.date_field :application_date, class: 'form-control' %>
          </div>
          
          <div class="form-group">
            <%= f.label :経費カテゴリ %>
            <%= f.collection_select :expense_category_id, ExpenseCategory.all, :id, :name, { prompt: "選択してください" }, class: 'form-control' %>
          </div>
          
          <div class="form-group">
            <%= f.label :経費詳細 %>
            <%= f.text_area :expense_detail, class: 'form-control' %>
          </div>
          
          <div class="form-group">
            <%= f.label :経費 %>
            <%= f.text_field :expense, class: 'form-control' %>
          </div>
          
          <div class="form-group">
            <%= f.label :添付ファイル %>
            <%= f.file_field :attached_file %>
          </div>
          
          <%= f.submit "更新", class: 'btn btn-info btn-block' %>
          
        <% end %>
      </div>
    </div>
  </div>
</div>