<div class="expense-detail-wrapper">
  <div class="container">
    <br>
      <table class="table table-striped table-bordered">
        <thead>
          <tr class="table-info">
            <th>No.</th>
            <th>申請日</th>
            <th>申請者</th>
            <th>経費カテゴリ</th>
            <th>経費詳細</th>
            <th>金額</th>
            <th>添付ファイル</th>
            <th></th>
          </tr>
        </thead>
          <tbody>
            <tr>
              <th scope="row"><%= @expense.id %></th>
                <td><%= @expense.application_date %></td>
                <td><%= @expense.user.name %></td>
                <td><%= @expense.expense_category_id %></td>
                <td><%= @expense.expense_detail %></td>
                <td><%= @expense.expense %></td>
                <td>
                  <% if @expense.attached_file.attached? %>
                    <%= link_to @expense.attached_file do %>
                      <%= image_tag "icons/attached_file.png" %>
                    <% end %>
                  <% end %> 
                </td>
                <td>
                  <%= link_to "編集", edit_admin_expense_path(@expense) %>
                  <%= link_to "削除", admin_expense_path, method: :delete %>
                </td>
            </tr>
          </tbody>
      </table>
  </div>
</div>