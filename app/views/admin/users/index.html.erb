<div class="admin-users-index-wrapper">
  <div class="col-md-offset-4 col-md-4 admin-users-index-container">
    
    <button class="btn btn-primary"
      data-toggle="collapse"
      data-target="#collapseExample"
      aria-expanded="false"
      aria-controls="collapseExample">ユーザ検索</button><br>
    <div class="collapse" id="collapseExample">
      <div class="card card-body">
        
        <%= form_with scope: :search, url: admin_users_path, method: :get, local: true do |f| %>
          <div class="row">
            <div class="form-group">
              <%= f.label :名前 %>
              <%= f.text_field :name, class: "form-control" %>
            </div>
            <div class="form-group">
              <%= f.label :メールアドレス %>
              <%= f.text_field :email, class: "form-control" %>
            </div>
            <%= f.submit "検索", class: 'btn btn-secondary' %>
          </div>
        <% end %>
          
      </div>
    </div>
      
      <table class="table table-striped table-bordered">
        <thead>
          <tr class="table-info">
            <th>No.</th>
            <th>名前</th>
            <th>メールアドレス</th>
            <th></th>
          </tr>
        </thead>
        <% @users.each do |user| %>
          <tbody>
            <tr>
              <th scope="row"><%= user.id %></th>
                <td><%= user.name %></td>
                <td><%= user.email %></td>
                <td>
                    <%= link_to "編集", edit_admin_user_path(user) %>
                  <% if current_user.admin? && !current_user?(user) %>
                    <%= link_to "削除", admin_user_path(user), method: :delete, data: {confirm: "削除してよろしいですか？"} %>
                  <% end %>
                </td>
            </tr>
          </tbody>
        <% end %>
      </table>
    
  </div>
</div>