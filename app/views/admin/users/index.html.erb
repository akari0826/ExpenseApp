<div class="user-index-wrapper">
  <div class="container">
    <br>
      <table class="table table-striped table-bordered">
        <thead>
          <tr class="table-info">
            <th>No.</th>
            <th>名前</th>
            <th>メールアドレス</th>
            <th></th>
          </tr>
        </thead>
        <% @users.each do |user| %>
          <tbody>
            <tr>
              <th scope="row"><%= user.id %></th>
                <td><%= user.name %></td>
                <td><%= user.email %></td>
                <td>
                  <% if current_user.admin? && !current_user?(user) %>
                    <%= link_to "編集", edit_admin_user_path(user) %>
                    <%= link_to "削除", admin_user_path(user), method: :delete, data: {confirm: "削除してよろしいですか？"} %>
                  <% end %>
                </td>
            </tr>
          </tbody>
        <% end %>
      </table>
  </div>
</div>