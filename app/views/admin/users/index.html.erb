<div class="user-index-wrapper">
  <div class="row">
    <div class="col-md-offset-4 col-md-4 container">
      
      <p1>ユーザ検索</p1>
      <%= form_with url: admin_users_path, method: :get, local: true do |f| %>
        <%= f.label :名前 %>
        <%= f.text_field :search %>
        <%= f.submit "検索", name: nil %>
      <% end %>
      
      <br>
        <table class="table table-striped table-bordered">
          <thead>
            <tr class="table-info">
              <th>No.</th>
              <th>名前</th>
              <th>メールアドレス</th>
              <th></th>
            </tr>
          </thead>
          <% @users.each do |user| %>
            <tbody>
              <tr>
                <th scope="row"><%= user.id %></th>
                  <td><%= user.name %></td>
                  <td><%= user.email %></td>
                  <td>
                      <%= link_to "編集", edit_admin_user_path(user) %>
                    <% if current_user.admin? && !current_user?(user) %>
                      <%= link_to "削除", admin_user_path(user), method: :delete, data: {confirm: "削除してよろしいですか？"} %>
                    <% end %>
                  </td>
              </tr>
            </tbody>
          <% end %>
        </table>
    </div>
  </div>
</div>