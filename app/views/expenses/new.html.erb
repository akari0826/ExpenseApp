<div class="expense-new-wrapper">
  <div class="container">
    <div class="row">
      <div class="col-md-offset-4 col-md-4">
        <h1 class="text-center">経費データ登録</h1>
        <%= form_with model: @expense, local: true do |f| %>
          <div class="form-group">
            <%= f.label :申請日 %>
            <%= f.date_field :application_date, class: 'form-control' %>
          </div>
          
          <div class="form-group">
            <%= f.label :経費カテゴリ %>
            <%= f.select :expense_category_id, {'旅費交通費': 1, '消耗品費': 2, '接待交際費': 3, '雑費': 4}, { prompt: "選択してください" }, { class: 'form-control' } %>
          </div>
          
          <div class="form-group">
            <%= f.label :経費詳細 %>
            <%= f.text_area :expense_detail, class: 'form-control' %>
          </div>
          
          <div class="form-group">
            <%= f.label :経費 %>
            <%= f.text_field :expense, class: 'form-control' %>
          </div>
          
          <div class="form-group">
            <%= f.label :添付ファイル %>
            <%= f.file_field :attached_file %>
          </div>
          
          <%= f.submit "登録", class: 'btn btn-info btn-block' %>
          
        <% end %>
      </div>
    </div>
  </div>
</div>