<div class="expense-detail-wrapper">
  <div class="container">
    <div class="row">
      <div class="col-md-offset-4 col-md-4">
      <h1 class="text-center">経費詳細</h1><br>
        <table class="table table-striped table-bordered">
            <tr>
              <th>No.</th>
              <td><%= @expense.id %></td>
            </tr>
            
            <tr>
              <th>申請日</th>
              <td><%= @expense.application_date %></td>
            </tr>
            
            <tr>
              <th>申請者</th>
              <td><%= @expense.user.name %></td>
            </tr>
            
            <tr>
              <th>経費カテゴリ</th>
              <td><%= @expense.expense_category.name %></td>
            </tr>
            
            <tr>
              <th>経費詳細</th>
              <td><%= @expense.expense_detail %></td>
            </tr>
            
            <tr>
              <th>金額</th>
              <td><%= @expense.expense.to_s(:delimited) %><p style="display:inline">円</p></td>
            </tr>
            
            <tr>
              <th>申請状況</th>
              <td>
                <!--@expense.approvalがtrue = 経費が承認済-->
                <% if @expense.approval %>
                  <p1>承認済</p1>
                  
                <!--@expense.approvalがfalse = 経費が未承認-->
                <% else %>
                  <p2>未承認</p2>
                <% end %>
              </td>
            </tr>
            
            <tr>
              <th>添付ファイル</th>
            　<td>
                <% if @expense.attached_file.attached? %> <!--添付ファイルがある場合アイコンを押すとリンクに飛ぶ-->
                  <%= link_to @expense.attached_file do %>
                  <%= image_tag "icons/attached_file.png" %>
                  <% end %>
                <% end %> 
              </td>
            </tr>
            
            <tr>
              <td>
              </td>
              <td>
                <%= link_to "編集", edit_expense_path(@expense) %>
                <%= link_to "削除", expense_path, method: :delete, data: 
                  { confirm: "削除してよろしいですか？",
                    commit: "削除",
                    cancel: "キャンセル" }, title: "削除の確認" %>
              </td>
            </tr>
          
        </table>
      </div>
    </div>
  </div>
</div>