<div class="users-new-wrapper">
  <div class="container">
    <div class="row">
      <div class="col-md-offset-4 col-md-4 users-new-container">
        <h1 class="text-center text-dark">ログイン</h1><br>
        <%= form_with scope: :session, url: login_path, local: true do |f| %>
        
          <div class="form-group">
            <%= f.label :メールアドレス, class: "text-dark" %>
            <%= f.text_field :email, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label :パスワード, class: "text-dark" %>
            <%= f.password_field :password, class: "form-control" %>
          </div>
          
          <%= f.submit "ログイン", class: "btn btn-block btn-info" %>
        <% end %>
        <%= link_to 'トップページに戻る', root_path %>
      </div>
    </div>
  </div>
</div>